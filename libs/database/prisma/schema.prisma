generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  email     String    @unique
  password  String
  firstName String
  lastName  String
  Product   Product[]
}

model Product {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  name        String
  description String
  slug        String   @unique
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  image       String
  media       String[]
  price       Float
  content     String
}
